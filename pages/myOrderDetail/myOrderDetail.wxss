@import '/style/weui.wxss';
page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.orderInfo {
  background: #fff;
  display: flex;
  flex-direction: row;
  padding: 35rpx 30rpx;
}
.proImg {
  width: 150rpx;
  height: 150rpx;
}
.proPic {

}
.infoDetail {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}
.leftText {
  font-size: 30rpx;
  color: #888888;
}
.rightText {
  margin-left: 20rpx;
  font-size: 30rpx;
}
.redColor {
  color: #FF4544;
}